# Production-Ready Environment Configuration for Exam Strategy Engine
# Copy this file to .env.local and fill in your actual Firebase project values

# =============================================================================
# FIREBASE CONFIGURATION (Required)
# =============================================================================
# Get these values from your Firebase project console
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Exam Strategy Engine
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Strategic Operating System for Competitive Exam Success

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_MICRO_LEARNING=true
NEXT_PUBLIC_ENABLE_MISSION_SYSTEM=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_for_error_tracking

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
ANALYZE=false
NEXT_PUBLIC_DEBUG_MODE=false

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_CACHE_TTL=300000

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
NEXT_PUBLIC_THEME=system
NEXT_PUBLIC_PRIMARY_COLOR=blue
NEXT_PUBLIC_ACCENT_COLOR=purple

# =============================================================================
# PRODUCTION DEPLOYMENT (When deploying)
# =============================================================================
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXT_PUBLIC_DEBUG_MODE=false
