rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // User progress documents - users can only access their own progress
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics events - users can only access their own analytics data
    match /analytics_events/{eventId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.data.userId == request.auth.uid;
    }
    
    // Analytics performance - users can only access their own performance data
    match /analytics_performance/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User sessions and activities
    match /userSessions/{sessionId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.data.userId == request.auth.uid;
    }
    
    // User missions and progress
    match /userMissions/{missionId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.data.userId == request.auth.uid;
    }
    
    // User daily logs
    match /userDailyLogs/{logId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.data.userId == request.auth.uid;
    }
    
    // User journeys - journey planning feature
    match /userJourneys/{journeyId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.data.userId == request.auth.uid;
    }
    
    // Global read access to exam data and other reference collections
    match /exams/{document} {
      allow read: if true;
    }
    
    match /subjects/{document} {
      allow read: if true;
    }
    
    match /questions/{document} {
      allow read: if true;
    }
    

    // Adaptive Testing Collections
    match /adaptiveTests/{testId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /testSessions/{sessionId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /testResponses/{responseId} {
      // Allow creating responses, users can read their own
      allow create: if request.auth != null;
      allow read: if request.auth != null; 
    }

    match /questionBankItems/{questionId} {
      // Allow authenticated users to read and create questions (for LLM generation)
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.createdBy == request.auth.uid || resource.data.createdBy == 'system');
    }

    match /courses/{document} {
      allow read: if true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
