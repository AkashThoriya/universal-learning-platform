rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Validate file size (max 5MB)
    function isValidFileSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Validate content type (images and PDFs only)
    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') 
          || request.resource.contentType == 'application/pdf';
    }
    
    // ==========================================
    // USER NOTES STORAGE
    // Path: users/{userId}/notes/{topicId}/{fileName}
    // ==========================================
    
    match /users/{userId}/notes/{topicId}/{fileName} {
      // Users can only read their own files
      allow read: if isOwner(userId);
      
      // Users can only write their own files with validation
      allow write: if isOwner(userId) 
                   && isValidFileSize() 
                   && isValidContentType();
      
      // Users can delete their own files
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // THUMBNAILS STORAGE
    // Path: users/{userId}/notes/{topicId}/thumbnails/{fileName}
    // ==========================================
    
    match /users/{userId}/notes/{topicId}/thumbnails/{fileName} {
      // Same rules apply to thumbnails
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) 
                   && isValidFileSize() 
                   && isValidContentType();
      allow delete: if isOwner(userId);
    }
    
    // ==========================================
    // DENY ALL OTHER ACCESS
    // ==========================================
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
